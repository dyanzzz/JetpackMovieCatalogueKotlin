<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.jetpack.jetpackmoviecataloguekotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movie"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackMovieCatalogueKotlin">
        <activity
            android:name=".ui.detail.DetailActivity"
            android:label="@string/detail"
            android:parentActivityName="com.dicoding.jetpack.jetpackmoviecataloguekotlin.ui.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>